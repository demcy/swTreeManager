<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="AddRevision" Height="350" Width="525">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
       
        
        <Button Grid.Row="0" Height="50" Width="500" Click="SolidFiles_Click">Get SolidWorks drawings</Button>
        <Button Grid.Row="1" Height="50" Width="500" Click="GetDirectory_Click">Get Directory where PDF drawings file are...</Button>
        <Button Grid.Row="2" Height="100" Width="200" Click="Ready_Click">Ready</Button>
    </Grid>
</Window>
